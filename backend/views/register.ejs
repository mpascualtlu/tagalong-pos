<!DOCTYPE html>
<html lang="en">
  <%- include ("./include/head") %>
  <body>
    <%- include ("./include/nav") %>
    <section>
      <div class="container-sm col-md-8" style="padding: 45px;">
        <h1>Register</h1>

        <form action="post-register" method="post" name="register-form">

          <div class="mb-4 row form-group">
            <label for="first_name" class="col-sm-3 col-form-label" style="font-weight: 700;">First Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="first_name">
            </div>
          </div>
  
          <div class="mb-4 row form-group">
            <label for="last_name" class="col-sm-3 col-form-label" style="font-weight: 700;">Last Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="last_name">
            </div>
          </div>
  
          <div class="mb-4 row form-group">
            <label for="email" class="col-sm-3 col-form-label" style="font-weight: 700;">Email</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="email">
            </div>
          </div>
  
          <div class="mb-4 row form-group">
            <label for="password" class="col-sm-3 col-form-label" style="font-weight: 700 ;">Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="password">
            </div>
          </div>
  
          <div class="mb-4 row form-group">
            <label for="inputPassword" class="col-sm-3 col-form-label" style="font-weight: 700 ;"> Retype Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputPassword">
            </div>
          </div>

          <div class="btn-container">
            <input type="submit" class="btn btn-success" value="Register">
            <!-- <a href="./AdminHome.html"><button type="button" class="btn btn-success">Register</button></a> -->
          </div>
          
        </form>
      

      </div>
    </section>
